section#groups-index
  div class=["container center"]
    h1 Grupos
    hr
    table class=["table table-striped"]
      thead
        tr 
          th = "Id"
          th = "Salon"
          th = "Lugares"
          th = "DÃ­a"
          th = "Horario"
          th = "Instructor"
          th = "Editar"
          th = "Eliminar"
      tbody
      - @groups.each do |group|   
        tr
          td = group.id
          td = group.classroom
          td = group.seats
          td = group.timetable.day_i18n
          td = group.timetable.start_time.strftime("%H:%M")
          td = group.user.name
          td
            button.btn.btn-default Editar
          td
            = link_to group_path(id: group.id), method: :delete
              button.btn.btn-danger Eliminar
    br
    = link_to new_group_path
      button.btn.btn-default#add-group-btn Nuevo grupo
    	
